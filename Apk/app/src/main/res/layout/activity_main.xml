<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcc.andrius.tccapk.ui.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:contentInsetStart="55dp"
        android:contentInsetLeft="55dp"
        android:contentInsetEnd="55dp"
        android:contentInsetRight="55dp"
        app:contentInsetLeft="55dp"
        app:contentInsetStart="55dp"
        app:contentInsetRight="55dp"
        app:contentInsetEnd="55dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGreen"
        android:layout_below="@id/toolbar"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="ERROR"/>


</RelativeLayout>
